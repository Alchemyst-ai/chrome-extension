{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "icons": {
    "128": "images/logo.png"
  },
  "name": "Alchemyst Context Layer",
  "version": "0.0.2",
  "description": "Enhance ChatGPT responses with personalized context from Alchemyst AI.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://platform-backend.getalchemystai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inpage.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}